<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:text="@string/author"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" >

            <TextView
                android:id="@+id/project_info"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/project_info" />

            <TextView
                android:id="@+id/photo_title_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/blue"
                android:layout_marginTop="20dp"
                android:onClick="photo"
                android:text="@string/photo" />

            <TextView
                android:id="@+id/photo_info_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:onClick="photo"
                android:text="@string/photo_info" />

            <TextView
                android:id="@+id/music_title_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/blue"
                android:layout_marginTop="20dp"
                android:onClick="music"
                android:text="@string/music" />

            <TextView
                android:id="@+id/music_info_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:onClick="music"
                android:text="@string/music_info" />

            <TextView
                android:id="@+id/github_title_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/blue"
                android:layout_marginTop="20dp"
                android:onClick="github"
                android:text="@string/github" />

            <TextView
                android:id="@+id/github_info_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:onClick="github"
                android:text="@string/github_info" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>