<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/burano"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/burano_date"
                android:onClick="onPhoto"
                app:srcCompat="@drawable/burano" />

            <ImageView
                android:id="@+id/burano1"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/burano1_date"
                android:onClick="onPhoto"
                app:srcCompat="@drawable/burano1" />

            <ImageView
                android:id="@+id/burano2"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/burano2_date"
                android:onClick="onPhoto"
                app:srcCompat="@drawable/burano2" />

            <ImageView
                android:id="@+id/burano3"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/burano3_date"
                android:onClick="onPhoto"
                app:srcCompat="@drawable/burano3" />

            <ImageView
                android:id="@+id/burano4"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/burano4_date"
                android:onClick="onPhoto"
                app:srcCompat="@drawable/burano4" />

            <ImageView
                android:id="@+id/burano5"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="60dp"
                android:contentDescription="@string/burano5_date"
                android:onClick="onPhoto"
                app:srcCompat="@drawable/burano5" />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
