<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/burano"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/burano"
                android:onClick="photoSection"
                app:srcCompat="@drawable/burano" />

            <ImageView
                android:id="@+id/bardolino"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/bardolino"
                android:onClick="photoSection"
                app:srcCompat="@drawable/bardolino" />

            <ImageView
                android:id="@+id/atri"
                android:layout_width="400dp"
                android:layout_marginStart="20dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/atri"
                android:onClick="photoSection"
                app:srcCompat="@drawable/atri" />

            <ImageView
                android:id="@+id/padua"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/padua"
                android:onClick="photoSection"
                app:srcCompat="@drawable/padua" />

            <ImageView
                android:id="@+id/sanmartino"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="60dp"
                android:contentDescription="@string/sanmartino"
                android:onClick="photoSection"
                app:srcCompat="@drawable/sanmartino" />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
